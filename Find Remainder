import java.util.*;
import java.lang.*;
import java.io.*;
class Codechef
{
	public static void main(String[] agrs){
	    Scanner input = new Scanner(System.in);
	    int a,b;
	    int t = input.nextInt();
	    for(int i=0;i<t;i++){
	        a=input.nextInt();
	        b=input.nextInt();
	        System.out.println(a%b);
	    }
	}
	
}
